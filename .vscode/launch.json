{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": false,
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/build/src/demo-07/demo-07", 
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        // {
        //   "text": "set follow-fork-mode child",
        //   "description": "跟踪子进程"
        // }
      ],
      "preLaunchTask": "build",
      "logging": {
        "engineLogging": true
      }
    }
  ]
}